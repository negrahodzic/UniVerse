<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.UniVerse" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Default light theme colors -->
        <item name="colorPrimary">@color/app_primary_light</item>
        <item name="colorPrimaryContainer">@color/app_primary_container_light</item>
        <item name="colorSecondary">@color/app_secondary_light</item>
        <item name="colorTertiary">@color/app_tertiary_light</item>
        <item name="android:colorBackground">@color/app_background_light</item>
        <item name="colorSurface">@color/app_surface_light</item>
        <item name="colorOnSurface">@color/app_on_surface_light</item>
    </style>

    <style name="Theme.UniVerse" parent="Base.Theme.UniVerse" />

    <!-- NTU Theme -->
    <style name="Theme.UniVerse.NTU" parent="Base.Theme.UniVerse">
        <item name="colorPrimary">@color/ntu_primary_light</item>
        <item name="colorSecondary">@color/ntu_primary_light</item>
        <item name="colorTertiary">@color/ntu_primary_light</item>
        <item name="colorSurface">@color/ntu_surface_light</item>
        <item name="colorOnSurface">@color/ntu_on_surface_light</item>
    </style>

    <style name="Widget.UniVerse.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="android:elevation">0dp</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
</resources>