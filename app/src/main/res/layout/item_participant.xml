<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardElevation="1dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <!-- Profile image -->
        <ImageView
            android:id="@+id/participantImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_launcher_foreground"
            android:background="@drawable/circle_background"
            android:padding="2dp"/>

        <!-- User info container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <!-- User name -->
            <TextView
                android:id="@+id/participantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <!-- Course info -->
            <TextView
                android:id="@+id/participantCourse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MSc Computer Science"
                android:textSize="14sp"
                android:textColor="#757575"/>
        </LinearLayout>

        <!-- Badge and level container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Level badge -->
            <TextView
                android:id="@+id/participantLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LVL 5"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/level_badge_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"/>

            <!-- Trophy image (if top performer) -->
            <ImageView
                android:id="@+id/participantBadge"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_trophy"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>